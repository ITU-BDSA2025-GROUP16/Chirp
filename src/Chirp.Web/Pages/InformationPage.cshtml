@page "/information"
@model Chirp.Web.Pages.InformationPageModel
@{
    ViewData["Title"] = "information";
    Layout = "Shared/_Layout";
}

@if (User.Identity != null && User.Identity.IsAuthenticated)
{
    <div>
        <h2>About @User.Identity.Name</h2>

        @if (User.Identity?.IsAuthenticated == true && User.Identity?.Name == Model.Author)
        {
            <form method="post" asp-page-handler="ForgetMe" style="margin:0;">
                <button type="submit" style="width: 120px; background-color: red; color: white;">
                    Delete Account and my data
                </button>
            </form>
        }

        <section>
            <h3>User Details</h3>
            <ul>
                <li><strong>Name:</strong> @Model.Name</li>
                <li><strong>Username:</strong> @Model.Username</li>
                <li><strong>Email:</strong> @Model.Email</li>
            </ul>
        </section>

        <section>
            <h3>People You Follow</h3>
           @if (Model.FollowedAuthors.Any())
    {
        <ul>
            @foreach (var author in Model.FollowedAuthors)
            {
                <li>
                    <a href="/user/@author.Name">@author.Name</a>
                </li>
            }
        </ul>
    }
    else
    {
        <em>You are not following anyone yet.</em>
    }
        </section>

        <section>
            <h3>Your Cheeps</h3>
           @if (Model.Cheeps.Any())
        {
            <ul id="messagelist" class="cheeps">
                @foreach (var cheep in Model.Cheeps)
                {
                    <li>
                        <div style="display: flex; justify-content: space-between; align-items: center;">
                            <strong>
                                <a href="/user/@cheep.Author">@cheep.Author</a>
                            </strong>
                        </div>

                        <p>
                            @cheep.Message
                            <small>&mdash; @cheep.Timestamp</small>
                        </p>
                    </li>
                }
            </ul>
        }
        else
        {
            <em>There are no cheeps so far.</em>
        }
        </section>

        

    </div>
}
else
{
    <p>You must be logged in to view this page.</p>
    <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Login">Login</a>
}