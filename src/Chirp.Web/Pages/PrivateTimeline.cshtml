@page "/private/{author}"
@model Chirp.Web.Pages.PrivateTimelineModel
@{
    ViewData["Title"] = "Chirp!";
    Layout = "Shared/_Layout";
}

@if (User?.Identity?.IsAuthenticated ?? false)
{
    <div>
        <h2>@Model.Author's Timeline - Page @Model.CurrentPage</h2>
        <p>This is your private timeline.</p>

        <div class="cheepbox">
            <h3>What's on your mind @Model.Author?</h3>
            <form method="post">
                <input asp-for="NewCheepText" type="text">
                <input type="submit" value="Share">
            </form>
        </div>

        @if (Model.Cheeps.Any())
        {
            <ul id="messagelist" class="cheeps">
                @foreach (var cheep in Model.Cheeps)
                {
                    <li>
                        <div style="display: flex; justify-content: space-between; align-items: flex-start;">
                            <div>
                                <strong>
                                    <a href="/user/@cheep.Author">@cheep.Author</a>
                                </strong>
                                <small>&mdash; @cheep.Timestamp</small>
                                <small>| Likes: @cheep.LikeCount</small>
                                <p style="margin: 4px 0 0 0;">@cheep.Message</p>
                            </div>

                           @if (Model.Author != cheep.Author)
                            {
                                <div style="display: flex; flex-direction: column; gap: 4px;">
                                    <form method="post" asp-page-handler="Follow" style="margin:0;">
                                        <input type="hidden" name="followedId" value="@cheep.AuthorId" />
                                        <button type="submit" style="width: 110px;">
                                            @(Model.FollowedAuthorIds.Contains(cheep.AuthorId) ? "Unfollow ‚ùå" : "Follow üìå")
                                        </button>
                                    </form>
                                    <form method="post" asp-page-handler="Like" style="margin:0;">
                                        <input type="hidden" name="CheepId" value="@cheep.CheepId" />
                                        <button type="submit" style="width: 110px;">
                                            @(Model.LikedCheepIds.Contains(cheep.CheepId) ? "Unlike üëé" : "Like üëç")
                                        </button>
                                    </form>
                                </div>
                            }
                        </div>
                    </li>
                }
            </ul>
        }
        else
        {
            <em>There are no cheeps so far.</em>
        }
    </div>
}
else
{
    <p>You are not logged in.</p>
    <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Register">Register</a>
    <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Login">Login</a>
}