@page "/"
@model Chirp.Web.Pages.PublicModel
@{
    ViewData["Title"] = "Chirp!";
    Layout = "Shared/_Layout";
}

<div>
    <h2>Public Timeline - Page @Model.CurrentPage</h2>

    @if (Model.Cheeps.Any())
    {
        <ul id="messagelist" class="cheeps">
           @foreach (var cheep in Model.Cheeps)
           {
               <li>
    <div style="display: flex; justify-content: space-between; align-items: center;">
        <strong>
            <a href="/user/@cheep.Author">@cheep.Author</a>
        </strong>

        @if (User.Identity?.Name != cheep.Author)
        {
           <form method="post" asp-page-handler="Follow" style="margin:0;">
    <input type="hidden" name="followedId" value="@cheep.AuthorId" />
    <button type="submit">Follow/Unfollow</button>
</form>
        }
    </div>

    <p>
        @cheep.Message
        <small>&mdash; @cheep.Timestamp</small>
    </p>
</li>
           }
        </ul>
    }
    else
    {
        <em>There are no cheeps so far.</em>
    }
</div>
