@using Microsoft.AspNetCore.Identity
@using Chirp.Core.Domain

@inject UserManager<Author> UserManager

<!DOCTYPE html>
<html lang="en">
<head>
    <title>@ViewData["Title"]</title>
    <link href="/css/style.css" rel="stylesheet" type="text/css" />
    <link rel="icon" type="image/png" href="/favicon/favicon.ico">
</head>
<body>
<div class=page>
    <h1><img src="/images/icon1.png" alt="Icon1"/>Chirp!</h1>
        <div class=navigation>
        @{
            string displayName = "";
            if (User?.Identity?.IsAuthenticated ?? false)
            {
                var user = await UserManager.GetUserAsync(User);
                // Try Name first, then UserName, then fall back to Identity.Name
                displayName = user?.Name 
                              ?? user?.UserName 
                              ?? User?.Identity?.Name 
                              ?? "Unknown"; // fallback if everything is null
            }

        }

        @if (User?.Identity?.IsAuthenticated ?? false)
{
    <div>
        <a href="/private/@(displayName)">my timeline</a> |
        <a href="/">public timeline</a> |
        <a href="/popular"> popular</a> |
        <a href="/information">information page</a> |
        <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Logout">Logout [@displayName]</a>
    </div>
}
else
{
    <div>
        <a href="/">public timeline</a> |
        <a href="/popular"> popular</a> |
        <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Register">Register</a>
        <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Login">Login</a>
    </div>
}
    </div>

    <div class=body>
            @RenderBody()
    </div>
    <div class=footer>
        Chirp &mdash; An ASP.NET Application
    </div>
</div>

</body>
@await RenderSectionAsync("Scripts", required: false)
</html>